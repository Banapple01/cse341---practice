<div class="row">
    <div class="col s12 m8">
        <h3>{{todo.todoTitle}}
            <small>{{{editIcon todo.user user todo._id false}}}</small>
        </h3>
        <div class="card todo">
            <div class="card-content">
                <span
                    class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{todo.todoDesc}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{todo.user.displayName}}</span>
                <img src="{{todo.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/todo_m/user/{{todo.user._id}}">More From
                    {{todo.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>