<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your Todos:</p>
{{#if todos}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date Created</th>
                <th>Completed</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each todos}}
                <tr>
                    <td><a href="/todos/{{_id}}">{{todoTitle}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td>{{completed}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/todo_m/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit"></i></a>

                        <form action="/todo_m/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
    <p>You don't have any todos!</p>
{{/if}}